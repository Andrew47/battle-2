      <br><br>
      <label for="player_2_name">
        Player 2 name
        <input type="text" name="player_2_name">
      </label>
      <br><br>
      Player 2 is a
      <label for="radio_button_1">
        <input type="radio" id="real_person" name="computer" value="false" checked="checked">
        <label for="real_person">real person</label>
        <input type="radio" id="computerised" name="computer" value="">
        <label for="computerised">computer</label>
      </label>
      <br><br>
      <label for="submit">
      <input id="submit" type="submit" value="Submit">
    </label>
    </form>
  </fieldset>

