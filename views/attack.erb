<head>
  <title>Attack Occurs</title>
  <link href="css/stylesheet.css" rel="stylesheet" type="text/css">
</head>

<% if @game.current_turn == @game.player_1 %>
  <p><%= @game.player_1.name %> has attacked <%= @game.player_2.name %>!</p>
<% else %>
  <p><%= @game.player_2.name %> has attacked <%= @game.player_1.name %>!</p>
<% end %>

<% unless @game.player_2.computer %>
  <form action="/switch-turns" method="post">
    <input type="submit" value="OK">
  </form>
  <% else %>
  <form action="/computer" method="post">
    <input type="submit" value="OK">
  </form>
  <% end %>

<img id="fire" src="images/Attack.png" width="100px" height="100px">
