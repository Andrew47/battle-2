<head>
  <link rel="stylesheet" href="/css/stylesheet.css" type="text/css">
  <title>Paralysis attack occurs</title>
</head>

<% if @game.current_turn == @game.player_1 %>
  <p><%= @game.player_1.name %> has paralysis attacked <%= @game.player_2.name %>!</p>
<% else %>
  <p><%= @game.player_2.name %> has paralysis attacked <%= @game.player_1.name %>!</p>
<% end %>

<% if rand(4) < 2 %>

<% unless @game.player_2.computer %>
  <form action="/switch-turns" method="post">
    <input type="submit" value="OK">
  </form>
  <% else %>
  <form action="/computer" method="post">
    <input type="submit" value="OK">
  </form>
<% end %>

<% else %>

<form action="/paralysis" method="get">
  <input type="submit" value="OK">
</form>

<%end%>

<img id="hammer" src="images/paralyse.png" width="100px" height="100px">
